generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum EventStatus {
    confirmed
    tentative
    cancelled
}

enum ReminderMethod {
    email
    popup
}

model User {
    id       String @id @default(uuid()) @db.Uuid
    email    String @unique
    googleId String @unique
}

model Calendar {
    id       String  @id @default(uuid()) @db.Uuid
    summary  String
    location String
    timeZone String
    events   Event[]
}

model Event {
    id String @id @default(uuid()) @db.Uuid

    status      EventStatus @default(confirmed)
    // link to google calendar event
    htmlLink    String      @unique
    // title of the event
    summary     String
    description String
    // location of the event (as an address for example)
    location    String

    startDateTime DateTime
    startTimeZone String?

    endDateTime        DateTime?
    endTimeZone        String?
    endTimeUnspecified Boolean   @default(false)

    calendarId String   @db.Uuid
    calendar   Calendar @relation(fields: [calendarId], references: [id])

    // if it isn't the default there is a list of extra reminders
    remindersUseDefault Boolean
    overrides           Reminder[]
}

model Reminder {
    id      Int            @id @default(autoincrement())
    method  ReminderMethod
    minutes Int

    eventId String @db.Uuid
    event   Event  @relation(fields: [eventId], references: [id])
}
